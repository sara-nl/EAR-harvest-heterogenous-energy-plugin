[Unit]
Description=EARGMD - EAR Global Manager

[Service]
Type=simple
EnvironmentFile=/home/xjcorbalan/my_ear/slurm/ear.conf
EnvironmentFile=/home/xjcorbalan/my_ear/slurm/ear.link
ExecStart=/home/xjcorbalan/my_ear/sbin/eargmd $PERIOD_T1 $PERIOD_T2 $MAX_ENERGY
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -TERM $MAINPID
KillMode=process
Restart=on-failure
RestartSec=30s
LimitMEMLOCK=infinity
LimitSTACK=infinity

[Install]
WantedBy=multi-user.target

