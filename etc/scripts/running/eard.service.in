[Unit]
Description=EARD - Energy Aware Runtime node daemon
# slurmd.service is not mandatory
#After=slurmd.service
#ConditionPathExists=@eartmpdir@

[Service]
Type=simple
ExecStart=LD_LIBRARY_PATH=@papilib@:@cpupowerlib@:$LD_LIBRARY_PATH @sbindir@/eard 1 @tmpdir@ 0
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=@tmpdir@/eard.pid
KillMode=process
Restart=on-failure
RestartSec=30s
LimitMEMLOCK=infinity
LimitSTACK=infinity

[Install]
WantedBy=multi-user.target
