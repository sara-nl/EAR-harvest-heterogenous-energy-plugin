module-whatis "Enable usage of Energy Aware Runtime"

setenv			EAR_INSTALL_PATH			@prefix@
setenv			EAR_LIB_PATH				@prefix@/lib/libear.so
setenv			EAR_TRAC_LIB_PATH			@prefix@/lib/libeart.so
setenv			EAR_LEARNING_PHASE			0
setenv			EAR_POWER_POLICY			MONITORING_ONLY
setenv			EAR_COEFF_DB_PATHNAME		@prefix@/tmp/coeffs/coeff.
setenv			EAR_TMP						@prefix@/tmp
setenv			EAR_DYNAIS_LEVELS			4
setenv			EAR_DYNAIS_WINDOW_SIZE		500
setenv			EAR_MIN_PERFORMANCE_EFFICIENCY_GAIN 0.75
setenv			EAR_PERFORMANCE_PENALTY		0.1
setenv			EAR_PERFORMANCE_ACCURACY	5000000
setenv			EAR_RESET_FREQ				0
setenv			EAR_VERBOSE					0
setenv			EAR_P_STATE					1

prepend-path	PATH						@prefix@/bin
prepend-path    LD_LIBRARY_PATH             @GSL_LIBDIR@
prepend-path    LD_LIBRARY_PATH             @CPUPOWER_LIBDIR@
prepend-path    LD_LIBRARY_PATH             @FREEIPMI_LIBDIR@
prepend-path    LD_LIBRARY_PATH             @PAPI_LIBDIR@
